<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cac.camp.camp.LoginActivity"
    android:id="@+id/w">

    <TextView android:text="To play music, please click the Spotify button" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spotify_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birk"
        android:id="@+id/birk"
        android:singleLine="true"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:onClick="birk_btn"/>

    <com.cac.camp.camp.ButtonFontAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_spotify"
        android:id="@+id/spotify_button"
        android:layout_below="@+id/spotify_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:onClick="spotify_btn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emil"
        android:id="@+id/emil"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="emil_btn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikolai"
        android:id="@+id/nikolai"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/spotify_button"
        android:layout_marginRight="32dp"
        android:singleLine="true"
        android:onClick="nikolai_btn"/>

</RelativeLayout>
