<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/logAcc_button"
        android:onClick="runLogAcc"
        android:layout_gravity="center_horizontal"
        android:id="@+id/log_acc_button"/>

    <Button android:id="@+id/gotoPlaylistBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go to playlist"
        android:onClick="gotoPlaylist"
        android:enabled="false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/createUser_button"
        android:onClick="createUser"
        android:layout_gravity="center_horizontal"
        android:id="@+id/create_user_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/updatePlaylist_button"
        android:onClick="updatePlaylist"
        android:layout_gravity="center_horizontal"
        android:id="@+id/update_playlist_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/getPlaylist_button"
        android:onClick="getPlaylist"
        android:layout_gravity="center_horizontal"
        android:id="@+id/get_playlist_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/bluetooth_button"
        android:onClick="searchBluetooth"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bluetooth_button"/>

</LinearLayout>
